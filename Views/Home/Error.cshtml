@{
    ViewBag.PageTitle = "Error - NovaTools Hub";
}

<div class="section-padding">
    <div class="container-custom">
        <div class="max-w-2xl mx-auto text-center">
            <div class="mb-8">
                <svg class="w-32 h-32 mx-auto text-[var(--color-error)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>
            
            <h1 class="text-5xl font-bold mb-4">Oops!</h1>
            <h2 class="text-2xl font-semibold text-[var(--color-text-medium)] mb-6">Something went wrong</h2>
            <p class="text-lg text-[var(--color-text-medium)] mb-8">
                We're sorry, but an error occurred while processing your request. Please try again later.
            </p>
            
            <div class="flex gap-4 justify-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                    </svg>
                    Go Home
                </a>
                <button onclick="window.history.back()" class="btn btn-outline">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Go Back
                </button>
            </div>
        </div>
    </div>
</div>
