                        <tr class="border-b border-[var(--color-border)]">
                            <th class="text-left p-2">#</th>
                            <th class="text-right p-2">Payment</th>
                            <th class="text-right p-2">Principal</th>
                            <th class="text-right p-2">Interest</th>
