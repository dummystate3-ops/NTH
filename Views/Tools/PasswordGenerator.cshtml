                        <div class="flex justify-between items-center">
                            <label class="text-sm font-medium text-[var(--color-text-medium)]">Your Password</label>
                            <span id="strengthText" class="text-sm font-bold"></span>
                        </div>
                        <div class="relative group">
                            <input type="text" id="generatedPassword"
