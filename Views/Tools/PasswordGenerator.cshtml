<!-- zxcvbn library for password strength -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/zxcvbn/4.4.2/zxcvbn.js"></script>

@section Scripts {
    <script>
        let copiedTimeout;

        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('passwordLength').addEventListener('input', function () {
                document.getElementById('lengthValue').textContent = this.value;
            });

            document.getElementById('generateBtn').addEventListener('click', generatePassword);
            document.getElementById('regenerateBtn').addEventListener('click', generatePassword);

            document.getElementById('copyBtn').addEventListener('click', function () {
                const password = document.getElementById('generatedPassword').value;
                if (password) {
                    navigator.clipboard.writeText(password).then(() => {
                        this.innerHTML = '<svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>';
                        if (window.toast) window.toast.success('Copied to clipboard!');
                        clearTimeout(copiedTimeout);
                        copiedTimeout = setTimeout(() => {
                            this.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>';
                        }, 2000);
                    });
                }
            });

            document.getElementById('checkPassword').addEventListener('input', function () {
                if (this.value) {
                    checkPasswordStrength(this.value);
                    document.getElementById('checkResults').classList.remove('hidden');
                } else {
                    document.getElementById('checkResults').classList.add('hidden');
                }
            });

            generatePassword();
        });

        async function generatePassword() {
            const length = parseInt(document.getElementById('passwordLength').value);
            const includeUppercase = document.getElementById('includeUppercase').checked;
            const includeLowercase = document.getElementById('includeLowercase').checked;
            const includeNumbers = document.getElementById('includeNumbers').checked;
            const includeSymbols = document.getElementById('includeSymbols').checked;

            if (!includeUppercase && !includeLowercase && !includeNumbers && !includeSymbols) {
                if (window.toast) window.toast.warning('Please select at least one character type');
                return;
            }

            // Visual feedback - button animation
            const btn = document.getElementById('generateBtn');
            const icon = document.getElementById('generateIcon');
            const text = document.getElementById('generateText');

            icon.style.transform = 'rotate(360deg)';
            text.textContent = 'Generating...';
            btn.disabled = true;

            try {
                const response = await fetch('/Tools/GeneratePassword', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ length, includeUppercase, includeLowercase, includeNumbers, includeSymbols })
                });

                const data = await response.json();
                if (data.success) {
                    document.getElementById('generatedPassword').value = data.password;
                    analyzePassword(data.password);
                    document.getElementById('strengthMeter').classList.remove('hidden');

                    // Success feedback
                    if (window.toast) window.toast.success('Password generated!');
                }
            } catch (error) {
                console.error('Password generation error:', error);
                if (window.toast) window.toast.error('Generation failed');
            } finally {
                // Reset button state
                setTimeout(() => {
                    icon.style.transform = 'rotate(0deg)';
                    text.textContent = 'Generate Secure Password';
                    btn.disabled = false;
                }, 300);
            }
        }


        function analyzePassword(password) {
            if (typeof zxcvbn === 'undefined') {
                updateStrengthMeter(75, 'Generated', 'var(--color-primary)');
                return;
            }
            const result = zxcvbn(password);
            const score = result.score;
            const strength = ((score + 1) / 5) * 100;
            const labels = ['Very Weak', 'Weak', 'Fair', 'Strong', 'Very Strong'];
            const colors = ['#ef4444', '#f97316', '#eab308', '#22c55e', '#06b6d4'];
            updateStrengthMeter(strength, labels[score], colors[score]);
        }

        function updateStrengthMeter(strength, text, color) {
            document.getElementById('strengthBar').style.width = strength + '%';
            document.getElementById('strengthBar').style.backgroundColor = color;
            document.getElementById('strengthText').textContent = text;
            document.getElementById('strengthText').style.color = color;
        }

        function checkPasswordStrength(password) {
            if (typeof zxcvbn === 'undefined') return;
            const result = zxcvbn(password);
            const score = result.score;
            const strength = ((score + 1) / 5) * 100;
            const labels = ['Very Weak', 'Weak', 'Fair', 'Strong', 'Very Strong'];
            const colors = ['#ef4444', '#f97316', '#eab308', '#22c55e', '#06b6d4'];

            document.getElementById('checkStrengthBar').style.width = strength + '%';
            document.getElementById('checkStrengthBar').style.backgroundColor = colors[score];

            const feedback = document.getElementById('checkFeedback');
            feedback.innerHTML = `
                        <div class="p-4 bg-[var(--color-bg)] rounded-xl border border-[var(--color-border)]">
                            <div class="flex items-center gap-2 mb-2">
                                <span class="w-3 h-3 rounded-full" style="background-color: ${colors[score]}"></span>
                                <span class="font-bold" style="color: ${colors[score]}">${labels[score]}</span>
                            </div>
                            ${result.feedback.warning ? `<p class="text-sm text-[var(--color-text-medium)] mb-1">‚ö†Ô∏è ${result.feedback.warning}</p>` : ''}
                            ${result.feedback.suggestions.length > 0 ?
                    result.feedback.suggestions.map(s => `<p class="text-sm text-[var(--color-text-medium)]">üí° ${s}</p>`).join('')
                    : '<p class="text-sm text-[var(--color-text-medium)]">‚úÖ This password looks good!</p>'
                }
                        </div>
                    `;
        }
    </script>
}