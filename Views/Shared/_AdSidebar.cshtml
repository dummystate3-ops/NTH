@*
    Sidebar Ad Placement
    Integration: Google AdSense / Ezoic
    Position: Sidebar (300x600 or 300x250)
    
    SETUP INSTRUCTIONS:
    1. Configure AdSense IDs in appsettings.json:
       "AdSense": {
         "PublisherId": "ca-pub-XXXXXXXXXXXXXXXX",
         "SidebarSlotId": "XXXXXXXXXX"
       }
    2. For Ezoic, replace the entire div with your Ezoic placeholder
*@

@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    var adEnabled = ViewBag.EnableAds ?? true;
    var adPosition = ViewBag.AdPosition ?? "sidebar";
    var publisherId = Configuration["AdSense:PublisherId"];
    var slotId = Configuration["AdSense:SidebarSlotId"];
    var environmentName = Configuration["Environment"];
    var isProduction = !string.IsNullOrEmpty(environmentName) && !string.Equals(environmentName, "Development", StringComparison.OrdinalIgnoreCase);
    var canRenderAds = adEnabled && isProduction && !string.IsNullOrEmpty(publisherId) && !string.IsNullOrEmpty(slotId);
}

@if (adEnabled)
{
    <div class="ad-container mb-6">
        <div class="text-xs text-center text-[var(--color-text-light)] mb-1">Advertisement</div>
        
        @* Google AdSense - Sidebar Ad (only when configured for production) *@
        @if (canRenderAds)
        {
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="@publisherId"
                 data-ad-slot="@slotId"
                 data-ad-format="auto"
                 data-full-width-responsive="true"></ins>
        }
        
        @* Fallback for development/testing *@
        <div class="ad-placeholder" style="background: #f0f0f0; border: 2px dashed #ccc; padding: 2rem; text-align: center; min-height: 250px; display: flex; align-items: center; justify-content: center;">
            <div>
                <p class="text-[var(--color-text-medium)] mb-2">ðŸ“¢ Advertisement Space</p>
                <p class="text-xs text-[var(--color-text-light)]">300x600 or 300x250 Ad Unit</p>
            </div>
        </div>
    </div>
    
    @if (canRenderAds)
    {
        <script>
            // Queue AdSense rendering (script is loaded conditionally in _AdSenseScript)
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    }
}
