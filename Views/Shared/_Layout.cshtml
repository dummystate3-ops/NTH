            </div>
            <div class="px-4 py-2 border-t border-[var(--color-border)] text-[0.7rem] text-[var(--color-text-medium)] flex items-center justify-between">
                <div>
                    <span class="font-semibold text-[var(--color-text-dark)]">Tips:</span>
                    <span class="ml-1">Type to filter, ↑/↓ to move, Enter to open, Esc to close.</span>
                </div>
                <div class="hidden sm:flex items-center gap-1">
                    <span class="px-1.5 py-0.5 rounded border border-[var(--color-border)] text-[0.65rem]">Ctrl</span>
                    <span>+</span>
                    <span class="px-1.5 py-0.5 rounded border border-[var(--color-border)] text-[0.65rem]">K</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/js/performance.js" asp-append-version="true" defer></script>
    <script src="~/js/theme.js" asp-append-version="true"></script>
    <script src="~/js/utils.js" asp-append-version="true"></script>
    
    <!-- Mobile Menu Toggle -->
    <script>
        document.getElementById('mobile-menu-btn')?.addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
    </script>

    <!-- Global tool search -->
    <script>
        (function () {
            function performGlobalSearch(query) {
                var baseUrl = '@Url.Action("AllTools", "Home")';
                if (!query) {
                    window.location.href = baseUrl;
                } else {
                    window.location.href = baseUrl + '?q=' + encodeURIComponent(query);
                }
            }

            var desktopForm = document.getElementById('global-search-form');
            if (desktopForm) {
                desktopForm.addEventListener('submit', function (e) {
                    e.preventDefault();
                    var input = document.getElementById('global-search-input');
                    var q = input ? input.value.trim() : '';
                    performGlobalSearch(q);
                });
            }

            var mobileForm = document.getElementById('global-search-form-mobile');
            if (mobileForm) {
                mobileForm.addEventListener('submit', function (e) {
                    e.preventDefault();
                    var input = document.getElementById('global-search-input-mobile');
                    var q = input ? input.value.trim() : '';
                    performGlobalSearch(q);
                });
            }
        })();
    </script>

    <!-- Command palette tool registry & behavior -->
    <script>
        (function () {
            window.NovaToolsRegistry = [
                {
                    name: "Unit Converter",
                    description: "Convert between length, weight, temperature, and more.",
                    url: "@Url.Action("UnitConverter", "Tools")",
                    category: "Converters",
