                    category: "Developer",
                    tags: ["json", "dev"]
                },
                {
                    name: "Regex Tester",
                    description: "Test regex patterns with live matches.",
                    url: "@Url.Action("RegexTester", "Tools")",
                    category: "Developer",
                    tags: ["regex", "pattern"]
                },
                {
                    name: "Lorem Ipsum Generator",
                    description: "Generate placeholder text for layouts and mocks.",
                    url: "@Url.Action("LoremIpsum", "Tools")",
                    category: "Content",
                    tags: ["text", "content"]
                },
                {
                    name: "Color Palette Generator",
                    description: "Create palettes, gradients, and exportable swatches.",
                    url: "@Url.Action("ColorPaletteGenerator", "Tools")",
                    category: "Design",
                    tags: ["color", "palette"]
                },
                {
                    name: "PDF Merge Tool",
                    description: "Combine multiple PDF documents into one file directly in your browser.",
                    url: "@Url.Action("PdfMerge", "Tools")",
                    category: "Documents",
                    tags: ["pdf", "merge"]
                },
                {
                    name: "Advanced Image Tool",
                    description: "Crop, resize, compress, watermark, and batch download images.",
                    url: "@Url.Action("AdvancedResizer", "ImageTools")",
                    category: "Images",
                    tags: ["resize", "crop", "images"]
                },
                {
                    name: "Image Compressor",
                    description: "Compress JPG and PNG images locally in your browser.",
                    url: "@Url.Action("Compressor", "ImageTools")",
                    category: "Images",
                    tags: ["compress", "images"]
                },
                {
                    name: "Background Remover",
                    description: "Remove backgrounds with AI-powered segmentation.",
                    url: "@Url.Action("BackgroundRemover", "ImageTools")",
                    category: "Images",
                    tags: ["background", "ai"]
                },
                {
                    name: "Business Loan & EMI Calculator",
                    description: "Calculate EMIs, payment schedules, and total interest.",
                    url: "@Url.Action("LoanCalculator", "Business")",
                    category: "Finance",
                    tags: ["loan", "emi", "business"]
                },
                {
                    name: "Compound Interest Calculator",
                    description: "Project savings growth with compound interest.",
                    url: "@Url.Action("CompoundInterest", "Business")",
                    category: "Finance",
                    tags: ["savings", "interest"]
                },
                {
                    name: "Pakistan Salary Tax Calculator",
                    description: "Estimate income tax for Pakistan salaried individuals (2025-26).",
                    url: "@Url.Action("PakistanTaxCalculator", "Business")",
                    category: "Pakistan",
                    tags: ["tax", "pakistan"]
                },
                {
                    name: "Pakistan Zakat Calculator",
                    description: "Calculate zakat on gold, cash, savings, and investments in Pakistan.",
                    url: "@Url.Action("PakistanZakatCalculator", "Business")",
                    category: "Pakistan",
                    tags: ["zakat", "pakistan"]
                },
                {
                    name: "World Time Viewer",
                    description: "View current time across major world cities.",
                    url: "@Url.Action("WorldTime", "Productivity")",
                    category: "Time",
                    tags: ["world time", "clock"]
                },
                {
                    name: "Time Zone Converter",
                    description: "Convert time between different time zones.",
                    url: "@Url.Action("TimeZoneConverter", "Productivity")",
                    category: "Time",
                    tags: ["zones", "time"]
                },
                {
                    name: "AI Writing Assistant",
                    description: "Draft content, summarize text, and improve writing with AI.",
                    url: "@Url.Action("AIWritingAssistant", "Trending")",
                    category: "AI",
                    tags: ["ai", "writing"]
                }
            ];

            const backdrop = document.getElementById('command-palette-backdrop');
            const input = document.getElementById('command-palette-input');
            const resultsContainer = document.getElementById('command-palette-results');
            const closeButton = document.getElementById('command-palette-close');
            const triggerButton = document.getElementById('command-palette-trigger');

            if (!backdrop || !input || !resultsContainer) {
                return;
            }

            let filteredTools = window.NovaToolsRegistry.slice();
            let activeIndex = 0;

            function renderResults() {
                resultsContainer.innerHTML = '';
                if (!filteredTools.length) {
                    const empty = document.createElement('div');
                    empty.className = 'px-4 py-3 text-sm text-[var(--color-text-medium)]';
                    empty.textContent = 'No tools found. Try a different keyword.';
                    resultsContainer.appendChild(empty);
                    return;
                }

                filteredTools.forEach((tool, index) => {
                    const item = document.createElement('button');
                    item.type = 'button';
                    item.className =
                        'w-full text-left px-4 py-2.5 flex flex-col gap-1 text-sm border-b border-[var(--color-border)] ' +
                        (index === activeIndex ? 'bg-[var(--color-bg)]' : 'bg-transparent');
                    item.dataset.index = index.toString();

                    const firstRow = document.createElement('div');
                    firstRow.className = 'flex items-center justify-between gap-2';

                    const title = document.createElement('div');
                    title.className = 'font-semibold text-[var(--color-text-dark)]';
                    title.textContent = tool.name;

                    const category = document.createElement('span');
                    category.className = 'text-[0.7rem] px-2 py-0.5 rounded-full bg-[var(--surface-base)] border border-[var(--border-subtle)] text-[var(--text-subtle)]';
                    category.textContent = tool.category;

                    firstRow.appendChild(title);
                    firstRow.appendChild(category);

                    const desc = document.createElement('div');
                    desc.className = 'text-xs text-[var(--color-text-medium)] line-clamp-2';
                    desc.textContent = tool.description;

                    item.appendChild(firstRow);
                    item.appendChild(desc);

                    item.addEventListener('click', function () {
                        window.location.href = tool.url;
                    });

                    resultsContainer.appendChild(item);
                });
            }

            function openPalette() {
                backdrop.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
                filteredTools = window.NovaToolsRegistry.slice();
                activeIndex = 0;
                renderResults();
                setTimeout(function () {
                    input.focus();
                    input.select();
                }, 10);
            }

            function closePalette() {
                backdrop.classList.add('hidden');
                document.body.style.overflow = '';
            }

            function updateFilter() {
                const q = input.value.trim().toLowerCase();
                if (!q) {
                    filteredTools = window.NovaToolsRegistry.slice();
                } else {
                    filteredTools = window.NovaToolsRegistry.filter(function (tool) {
                        const haystack =
                            (tool.name + ' ' + tool.description + ' ' + tool.category + ' ' + (tool.tags || []).join(' '))
                                .toLowerCase();
                        return haystack.indexOf(q) !== -1;
                    });
                }
                activeIndex = 0;
                renderResults();
            }

            document.addEventListener('keydown', function (event) {
                const target = event.target;
                const tag = target && target.tagName ? target.tagName.toLowerCase() : '';

                const isInputLike = tag === 'input' || tag === 'textarea' || target.isContentEditable;
                const isCtrlK = (event.ctrlKey || event.metaKey) && event.key.toLowerCase() === 'k';

                if (isCtrlK && !event.shiftKey) {
                    event.preventDefault();
                    if (backdrop.classList.contains('hidden')) {
                        openPalette();
                    } else {
                        closePalette();
                    }
                    return;
                }

                if (backdrop.classList.contains('hidden')) {
                    return;
                }

                if (event.key === 'Escape') {
                    event.preventDefault();
                    closePalette();
                    return;
                }

                if (isInputLike && target !== input) {
                    return;
                }

                if (event.key === 'ArrowDown') {
                    event.preventDefault();
                    if (filteredTools.length) {
                        activeIndex = (activeIndex + 1) % filteredTools.length;
                        renderResults();
                    }
                } else if (event.key === 'ArrowUp') {
                    event.preventDefault();
                    if (filteredTools.length) {
                        activeIndex = (activeIndex - 1 + filteredTools.length) % filteredTools.length;
                        renderResults();
                    }
                } else if (event.key === 'Enter') {
                    if (document.activeElement === input) {
                        event.preventDefault();
                        if (filteredTools[activeIndex]) {
                            window.location.href = filteredTools[activeIndex].url;
                        }
                    }
                }
            });

            input.addEventListener('input', function () {
                updateFilter();
            });

            closeButton?.addEventListener('click', function () {
                closePalette();
            });

            triggerButton?.addEventListener('click', function (e) {
                e.preventDefault();
                openPalette();
            });

            backdrop.addEventListener('click', function (e) {
                if (e.target === backdrop) {
                    closePalette();
                }
            });
        })();
    </script>
    
