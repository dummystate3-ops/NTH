@*
    In-Content Ad Placement
    Integration: Google AdSense / Ezoic
    Position: Within content (responsive, typically 728x90 or 300x250)
    
    SETUP INSTRUCTIONS:
    1. Configure AdSense IDs in appsettings.json:
       "AdSense": {
         "PublisherId": "ca-pub-XXXXXXXXXXXXXXXX",
         "InContentSlotId": "XXXXXXXXXX"
       }
    2. For Ezoic, replace the entire ad block with your Ezoic placeholder
*@

@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    var adEnabled = ViewBag.EnableAds ?? true;
    var publisherId = Configuration["AdSense:PublisherId"];
    var slotId = Configuration["AdSense:InContentSlotId"];
    var environmentName = Configuration["Environment"];
    var isProduction = !string.IsNullOrEmpty(environmentName) && !string.Equals(environmentName, "Development", StringComparison.OrdinalIgnoreCase);
    var canRenderAds = adEnabled && isProduction && !string.IsNullOrEmpty(publisherId) && !string.IsNullOrEmpty(slotId);
}

@if (adEnabled)
{
    <div class="ad-container my-8">
        <div class="text-xs text-center text-[var(--color-text-light)] mb-1">Advertisement</div>
        
        @* Google AdSense - In-Content Ad (only when configured for production) *@
        @if (canRenderAds)
        {
            <ins class="adsbygoogle"
                 style="display:block; text-align:center;"
                 data-ad-client="@publisherId"
                 data-ad-slot="@slotId"
                 data-ad-format="fluid"
                 data-ad-layout="in-article"></ins>
        }

        @* Fallback / development placeholder *@
        <div class="ad-placeholder" style="background: #f0f0f0; border: 2px dashed #ccc; padding: 2rem; text-align: center; min-height: 100px; display: flex; align-items: center; justify-content: center;">
            <div>
                <p class="text-[var(--color-text-medium)] mb-2">ðŸ“¢ Advertisement Space</p>
                <p class="text-xs text-[var(--color-text-light)]">Responsive In-Content Ad Unit</p>
            </div>
        </div>
    </div>
    
    @if (canRenderAds)
    {
        <script>
            // Queue AdSense rendering (script is loaded conditionally in _AdSenseScript)
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    }
}
