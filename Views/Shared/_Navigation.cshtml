@* Simplified Navigation - Category Cards Only *@
<div class="hidden md:block absolute left-1/2 -translate-x-1/2 mt-2 w-[95vw] max-w-[500px] bg-[var(--color-surface)] rounded-xl shadow-2xl border border-[var(--color-border)] opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 overflow-hidden">
    <div class="grid grid-cols-2 md:grid-cols-3 gap-3 p-4">
        
        @* Developer Tools Category *@
        <a asp-controller="Home" asp-action="AllTools" asp-fragment="developer" class="group/card p-4 rounded-lg border border-[var(--color-border)] hover:border-[var(--color-accent)] hover:shadow-lg transition-all bg-gradient-to-br from-blue-50 to-cyan-50 dark:from-blue-900/20 dark:to-cyan-900/20">
            <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-cyan-500 flex items-center justify-center mb-3 group-hover/card:scale-110 transition-transform">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
            </div>
            <h3 class="font-bold text-sm mb-1 group-hover/card:text-[var(--color-accent)]">Developer</h3>
            <p class="text-xs text-[var(--color-text-medium)]">4 tools</p>
        </a>

        @* Converters Category *@
        <a asp-controller="Home" asp-action="AllTools" asp-fragment="converters" class="group/card p-4 rounded-lg border border-[var(--color-border)] hover:border-[var(--color-accent)] hover:shadow-lg transition-all bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20">
            <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-green-500 to-emerald-500 flex items-center justify-center mb-3 group-hover/card:scale-110 transition-transform">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                </svg>
            </div>
            <h3 class="font-bold text-sm mb-1 group-hover/card:text-[var(--color-accent)]">Converters</h3>
            <p class="text-xs text-[var(--color-text-medium)]">7 tools</p>
        </a>

        @* Math & Education Category *@
        <a asp-controller="Home" asp-action="AllTools" asp-fragment="math" class="group/card p-4 rounded-lg border border-[var(--color-border)] hover:border-[var(--color-accent)] hover:shadow-lg transition-all bg-gradient-to-br from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20">
            <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center mb-3 group-hover/card:scale-110 transition-transform">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
            </div>
            <h3 class="font-bold text-sm mb-1 group-hover/card:text-[var(--color-accent)]">Math & Education</h3>
            <p class="text-xs text-[var(--color-text-medium)]">7 tools</p>
        </a>

        @* Business & Finance Category *@
        <a asp-controller="Home" asp-action="AllTools" asp-fragment="business" class="group/card p-4 rounded-lg border border-[var(--color-border)] hover:border-[var(--color-accent)] hover:shadow-lg transition-all bg-gradient-to-br from-orange-50 to-red-50 dark:from-orange-900/20 dark:to-red-900/20">
