            </div>
            <h3 class="font-bold text-sm mb-1 group-hover/card:text-[var(--color-accent)]">Academic</h3>
            <p class="text-xs text-[var(--color-text-medium)]">6 tools</p>
        </a>

        @* Productivity Category *@
        <a asp-controller="Home" asp-action="AllTools" asp-fragment="productivity" class="group/card p-4 rounded-lg border border-[var(--color-border)] hover:border-[var(--color-accent)] hover:shadow-lg transition-all bg-gradient-to-br from-indigo-50 to-blue-50 dark:from-indigo-900/20 dark:to-blue-900/20">
            <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-500 to-blue-500 flex items-center justify-center mb-3 group-hover/card:scale-110 transition-transform">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
            </div>
            <h3 class="font-bold text-sm mb-1 group-hover/card:text-[var(--color-accent)]">Productivity & Utility</h3>
            <p class="text-xs text-[var(--color-text-medium)]">12 tools</p>
        </a>

        @* Trending & AI Category *@
        <a asp-controller="Home" asp-action="AllTools" asp-fragment="trending" class="group/card p-4 rounded-lg border border-[var(--color-border)] hover:border-[var(--color-accent)] hover:shadow-lg transition-all bg-gradient-to-br from-violet-50 to-purple-50 dark:from-violet-900/20 dark:to-purple-900/20">
            <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-violet-500 to-purple-500 flex items-center justify-center mb-3 group-hover/card:scale-110 transition-transform">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
            </div>
            <h3 class="font-bold text-sm mb-1 group-hover/card:text-[var(--color-accent)]">Trending & AI</h3>
            <p class="text-xs text-[var(--color-text-medium)]">6 tools</p>
        </a>

    </div>
    
    @* View All Tools Footer *@
    <div class="border-t border-[var(--color-border)] p-3 bg-[var(--color-bg)]">
        <a asp-controller="Home" asp-action="AllTools" class="flex items-center justify-between px-3 py-2 rounded-lg bg-gradient-primary text-white hover:shadow-lg transition-all group/view">
            <span class="text-sm font-medium">View All Tools</span>
            <svg class="w-4 h-4 transition-transform group-hover/view:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
        </a>
    </div>
</div>


