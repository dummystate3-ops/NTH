@*
    Breadcrumb navigation partial view
    Usage: <partial name="_Breadcrumb" model="breadcrumbList" />
*@

@model List<(string Name, string Url)>

@if (Model != null && Model.Any())
{
    <nav aria-label="Breadcrumb" class="mb-6">
        <ol class="flex flex-wrap items-center gap-2 text-sm">
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                var isLast = i == Model.Count - 1;
                
                <li class="flex items-center gap-2">
                    @if (!isLast)
                    {
                        <a href="@item.Url" class="text-[var(--color-text-medium)] hover:text-[var(--color-primary)] transition-colors">
                            @item.Name
                        </a>
                        <svg class="w-4 h-4 text-[var(--color-text-light)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    }
                    else
                    {
                        <span class="text-[var(--color-text-dark)] font-medium" aria-current="page">
                            @item.Name
                        </span>
                    }
                </li>
            }
        </ol>
    </nav>
}
