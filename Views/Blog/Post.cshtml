@model BlogPost

@{
    var breadcrumbs = ViewBag.Breadcrumbs as List<(string Name, string Url)>;
}

<div class="section-padding">
    <div class="container-custom">
        <div class="max-w-4xl mx-auto">
            <!-- Breadcrumb -->
            @if (breadcrumbs != null)
            {
                <partial name="_Breadcrumb" model="breadcrumbs" />
            }

            <!-- Article Header -->
            <article class="card">
                <div class="mb-6">
                    <div class="flex flex-wrap items-center gap-3 text-sm text-[var(--color-text-medium)] mb-4">
                        <span class="px-3 py-1 bg-[var(--color-primary)] bg-opacity-10 text-[var(--color-primary)] rounded-full font-medium">
                            @Model.Category?.Name
                        </span>
                        <span>•</span>
                        <time datetime="@Model.PublishedDate?.ToString("yyyy-MM-dd")">
                            @Model.PublishedDate?.ToString("MMMM dd, yyyy")
                        </time>
                        <span>•</span>
                        <span>@Model.ViewCount views</span>
                    </div>

                    <h1 class="text-4xl md:text-5xl font-bold mb-4">@Model.Title</h1>

                    <div class="flex items-center gap-3 text-[var(--color-text-medium)]">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span class="font-medium">@Model.Author</span>
                    </div>
                </div>

                <!-- Featured Image -->
                @if (!string.IsNullOrEmpty(Model.FeaturedImage))
                {
                    <div class="mb-8 -mx-6">
                        <img src="@Model.FeaturedImage" alt="@Model.Title" 
                             class="w-full h-auto rounded-lg" />
                    </div>
                }

                <!-- Social Share -->
                <div class="mb-8 pb-6 border-b border-[var(--color-border)]">
                    <partial name="_SocialShare" />
                </div>

                <!-- Content -->
                <div class="prose prose-lg max-w-none mb-8">
                    @Html.Raw(Model.Content)
                </div>

                <!-- Tags -->
                @if (!string.IsNullOrEmpty(Model.Tags))
                {
                    var tags = Model.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries);
                    <div class="pt-6 border-t border-[var(--color-border)]">
                        <h3 class="text-lg font-semibold mb-3">Tags</h3>
                        <div class="flex flex-wrap gap-2">
                            @foreach (var tag in tags)
                            {
                                <span class="px-3 py-1 bg-[var(--color-bg)] text-[var(--color-text-medium)] rounded-full text-sm">
                                    #@tag.Trim()
                                </span>
                            }
                        </div>
                    </div>
                }
            </article>

            <!-- Share Again -->
            <div class="mt-8 card">
                <div class="text-center mb-4">
                    <h3 class="text-xl font-bold">Enjoyed this article?</h3>
                    <p class="text-[var(--color-text-medium)]">Share it with your network!</p>
                </div>
                <div class="flex justify-center">
                    <partial name="_SocialShare" />
                </div>
            </div>

            <!-- Back to Blog -->
            <div class="mt-8 text-center">
                <a asp-controller="Blog" asp-action="Index" class="btn btn-outline">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Back to Blog
                </a>
            </div>
        </div>
    </div>
</div>

@section Head {
    <style>
        /* Prose styling for blog content */
        .prose {
            color: var(--color-text-dark);
        }
        .prose h2, .prose h3, .prose h4 {
            margin-top: 2rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }
        .prose h2 { font-size: 2rem; }
        .prose h3 { font-size: 1.5rem; }
        .prose h4 { font-size: 1.25rem; }
        .prose p {
            margin-bottom: 1rem;
            line-height: 1.75;
        }
        .prose ul, .prose ol {
            margin-bottom: 1rem;
            padding-left: 1.5rem;
        }
        .prose li {
            margin-bottom: 0.5rem;
        }
        .prose a {
            color: var(--color-primary);
            text-decoration: underline;
        }
        .prose a:hover {
            color: var(--color-primary-hover);
        }
        .prose img {
            border-radius: 0.5rem;
            margin: 2rem 0;
        }
        .prose blockquote {
            border-left: 4px solid var(--color-primary);
            padding-left: 1rem;
            margin: 1.5rem 0;
            font-style: italic;
            color: var(--color-text-medium);
        }
        .prose code {
            background: var(--color-bg);
            padding: 0.2rem 0.4rem;
            border-radius: 0.25rem;
            font-size: 0.9em;
        }
        .prose pre {
            background: var(--color-bg);
            padding: 1rem;
            border-radius: 0.5rem;
            overflow-x: auto;
            margin: 1rem 0;
        }
        .prose pre code {
            background: none;
            padding: 0;
        }
    </style>
}
