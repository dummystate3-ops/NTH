@model List<BlogPost>

@{
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var searchQuery = ViewBag.SearchQuery as string;
    var categories = ViewBag.Categories as List<BlogCategory> ?? new List<BlogCategory>();
    var currentCategory = ViewBag.CurrentCategory as string;
}

<div class="section-padding">
    <div class="container-custom">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl font-bold mb-4">Blog</h1>
            <p class="text-xl text-[var(--color-text-medium)]">
                @if (!string.IsNullOrEmpty(searchQuery))
                {
                    <text>Search results for "@searchQuery"</text>
                }
                else
                {
                    <text>Insights, tutorials, and tips for making the most of our tools</text>
                }
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <!-- Sidebar -->
            <aside class="lg:col-span-1">
                <div class="card sticky top-20">
                    <h3 class="text-xl font-bold mb-4">Categories</h3>
                    <ul class="space-y-2">
                        <li>
                            <a asp-controller="Blog" asp-action="Index" 
                               class="block px-3 py-2 rounded @(string.IsNullOrEmpty(currentCategory) ? "bg-[var(--color-primary)] text-white" : "hover:bg-[var(--color-bg)]")">
                                All Posts
                            </a>
                        </li>
                        @foreach (var category in categories)
                        {
                            <li>
                                <a asp-controller="Blog" asp-action="Index" asp-route-category="@category.Slug"
                                   class="block px-3 py-2 rounded @(currentCategory == category.Slug ? "bg-[var(--color-primary)] text-white" : "hover:bg-[var(--color-bg)]")">
                                    @category.Name
                                </a>
                            </li>
                        }
                    </ul>

                    <div class="mt-8">
                        <h3 class="text-xl font-bold mb-4">Search</h3>
                        <form asp-controller="Blog" asp-action="Search" method="get">
                            <div class="flex gap-2">
                                <input type="text" name="q" value="@searchQuery" 
                                       placeholder="Search posts..." 
                                       class="form-input flex-1" />
                                <button type="submit" class="btn btn-primary px-4">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                                    </svg>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </aside>

            <!-- Posts Grid -->
            <div class="lg:col-span-3">
                @if (Model.Any())
                {
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                        @foreach (var post in Model)
                        {
                            <article class="card card-hover">
                                @if (!string.IsNullOrEmpty(post.FeaturedImage))
                                {
                                    <div class="mb-4 -mx-6 -mt-6">
                                        <img src="@post.FeaturedImage" alt="@post.Title" 
                                             class="w-full h-48 object-cover rounded-t-xl" />
                                    </div>
                                }
                                
                                <div class="flex items-center gap-2 text-sm text-[var(--color-text-medium)] mb-3">
                                    <span class="px-2 py-1 bg-[var(--color-primary)] bg-opacity-10 text-[var(--color-primary)] rounded">
                                        @post.Category?.Name
                                    </span>
                                    <span>•</span>
                                    <time datetime="@post.PublishedDate?.ToString("yyyy-MM-dd")">
                                        @post.PublishedDate?.ToString("MMM dd, yyyy")
                                    </time>
                                </div>

                                <h2 class="text-2xl font-bold mb-3">
                                    <a href="/Blog/@post.Slug" class="text-[var(--color-text-dark)] hover:text-[var(--color-primary)] no-underline">
                                        @post.Title
                                    </a>
                                </h2>

                                <p class="text-[var(--color-text-medium)] mb-4">
                                    @post.Excerpt
                                </p>

                                <div class="flex items-center justify-between">
                                    <div class="flex items-center gap-2 text-sm text-[var(--color-text-medium)]">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                        @post.Author
                                    </div>
                                    <a href="/Blog/@post.Slug" class="text-[var(--color-primary)] font-medium hover:underline">
                                        Read more →
                                    </a>
                                </div>
                            </article>
                        }
                    </div>

                    <!-- Pagination -->
                    @if (totalPages > 1)
                    {
                        <nav class="flex justify-center gap-2">
                            @if (currentPage > 1)
                            {
                                <a asp-controller="Blog" asp-action="Index" 
                                   asp-route-page="@(currentPage - 1)" 
                                   asp-route-category="@currentCategory"
                                   class="btn btn-outline">
                                    Previous
                                </a>
                            }

                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <a asp-controller="Blog" asp-action="Index" 
                                   asp-route-page="@i" 
                                   asp-route-category="@currentCategory"
                                   class="btn @(i == currentPage ? "btn-primary" : "btn-outline")">
                                    @i
                                </a>
                            }

                            @if (currentPage < totalPages)
                            {
                                <a asp-controller="Blog" asp-action="Index" 
                                   asp-route-page="@(currentPage + 1)" 
                                   asp-route-category="@currentCategory"
                                   class="btn btn-outline">
                                    Next
                                </a>
                            }
                        </nav>
                    }
                }
                else
                {
                    <div class="text-center py-12">
                        <svg class="w-24 h-24 mx-auto text-[var(--color-text-light)] mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <h3 class="text-2xl font-bold mb-2">No Posts Found</h3>
                        <p class="text-[var(--color-text-medium)]">
                            @if (!string.IsNullOrEmpty(searchQuery))
                            {
                                <text>Try a different search term</text>
                            }
                            else
                            {
                                <text>Check back later for new content</text>
                            }
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
