@using NovaToolsHub.Areas.Admin.Controllers
@model AnalyticsViewModel

@{
    ViewData["Title"] = "Analytics Dashboard";
    ViewBag.PageTitle = "Analytics Dashboard - NovaTools Hub Admin";
}

<div class="admin-container">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-4xl font-bold mb-2">üìä Analytics Dashboard</h1>
            <p class="text-[var(--color-text-medium)]">Monitor your site's performance and engagement</p>
        </div>
        <a asp-area="Admin" asp-controller="Analytics" asp-action="ExportData" asp-route-format="csv" class="btn-secondary">
            üì• Export Data
        </a>
    </div>

    <!-- Statistics Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Posts -->
        <div class="card">
            <div class="flex items-center justify-between mb-2">
                <h3 class="text-sm font-medium text-[var(--color-text-medium)]">Total Posts</h3>
                <span class="text-2xl">üìù</span>
            </div>
            <p class="text-3xl font-bold text-[var(--color-text)]">@Model.TotalBlogPosts</p>
            <p class="text-sm text-[var(--color-text-medium)] mt-1">All blog posts</p>
        </div>

        <!-- Published Posts -->
        <div class="card">
            <div class="flex items-center justify-between mb-2">
                <h3 class="text-sm font-medium text-[var(--color-text-medium)]">Published</h3>
                <span class="text-2xl">‚úÖ</span>
            </div>
            <p class="text-3xl font-bold text-green-600">@Model.PublishedPosts</p>
            <p class="text-sm text-[var(--color-text-medium)] mt-1">Live on site</p>
        </div>

        <!-- Draft Posts -->
        <div class="card">
            <div class="flex items-center justify-between mb-2">
                <h3 class="text-sm font-medium text-[var(--color-text-medium)]">Drafts</h3>
                <span class="text-2xl">üìÑ</span>
            </div>
            <p class="text-3xl font-bold text-orange-600">@Model.DraftPosts</p>
            <p class="text-sm text-[var(--color-text-medium)] mt-1">Unpublished</p>
        </div>

        <!-- Total Views -->
        <div class="card">
            <div class="flex items-center justify-between mb-2">
                <h3 class="text-sm font-medium text-[var(--color-text-medium)]">Total Views</h3>
                <span class="text-2xl">üëÅÔ∏è</span>
            </div>
            <p class="text-3xl font-bold text-[var(--color-primary)]">@Model.TotalViews.ToString("N0")</p>
            <p class="text-sm text-[var(--color-text-medium)] mt-1">All-time</p>
        </div>
    </div>

    <!-- Configuration Status -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <!-- Google Analytics Status -->
        <div class="card">
            <div class="flex items-center gap-3 mb-4">
                <span class="text-3xl">üìà</span>
                <div>
                    <h3 class="text-xl font-bold">Google Analytics</h3>
                    <p class="text-sm text-[var(--color-text-medium)]">Track visitor behavior and traffic</p>
                </div>
            </div>
            @if (Model.GoogleAnalyticsConfigured)
            {
                <div class="flex items-center gap-2 mb-2">
                    <span class="w-3 h-3 bg-green-500 rounded-full"></span>
                    <span class="text-sm font-medium text-green-700">Configured</span>
                </div>
                <p class="text-xs text-[var(--color-text-medium)] font-mono bg-[var(--color-bg)] p-2 rounded">
                    ID: @Model.GoogleAnalyticsId
                </p>
                <a href="https://analytics.google.com" target="_blank" class="text-sm text-[var(--color-primary)] hover:underline mt-2 inline-block">
                    View in Google Analytics ‚Üí
                </a>
            }
            else
            {
                <div class="flex items-center gap-2 mb-2">
                    <span class="w-3 h-3 bg-red-500 rounded-full"></span>
                    <span class="text-sm font-medium text-red-700">Not Configured</span>
                </div>
                <p class="text-sm text-[var(--color-text-medium)] mb-3">
                    Add your Measurement ID to appsettings.json to enable tracking.
                </p>
                <code class="text-xs bg-[var(--color-bg)] p-2 rounded block">
                    "GoogleAnalytics": { "MeasurementId": "G-XXXXXXXXXX" }
                </code>
            }
        </div>

        <!-- AdSense Status -->
        <div class="card">
            <div class="flex items-center gap-3 mb-4">
                <span class="text-3xl">üí∞</span>
                <div>
                    <h3 class="text-xl font-bold">Google AdSense</h3>
                    <p class="text-sm text-[var(--color-text-medium)]">Monetize your content with ads</p>
                </div>
            </div>
            @if (Model.AdSenseConfigured)
            {
                <div class="flex items-center gap-2 mb-2">
                    <span class="w-3 h-3 bg-green-500 rounded-full"></span>
                    <span class="text-sm font-medium text-green-700">Configured</span>
                </div>
                <p class="text-xs text-[var(--color-text-medium)] font-mono bg-[var(--color-bg)] p-2 rounded">
                    Publisher ID: @Model.AdSensePublisherId
                </p>
                <a href="https://www.google.com/adsense" target="_blank" class="text-sm text-[var(--color-primary)] hover:underline mt-2 inline-block">
                    View AdSense Dashboard ‚Üí
                </a>
            }
            else
            {
                <div class="flex items-center gap-2 mb-2">
                    <span class="w-3 h-3 bg-red-500 rounded-full"></span>
                    <span class="text-sm font-medium text-red-700">Not Configured</span>
                </div>
                <p class="text-sm text-[var(--color-text-medium)] mb-3">
                    Add your Publisher ID to appsettings.json to enable ads.
                </p>
                <code class="text-xs bg-[var(--color-bg)] p-2 rounded block">
                    "AdSense": { "PublisherId": "ca-pub-XXXXXXXXXXXXXXXX" }
                </code>
            }
        </div>
    </div>

    <!-- Recent Posts -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Posts -->
        <div class="card">
            <h3 class="text-xl font-bold mb-4">üìÖ Recent Posts</h3>
            @if (Model.RecentPosts.Any())
            {
                <div class="space-y-3">
                    @foreach (var post in Model.RecentPosts)
                    {
                        <div class="flex items-start justify-between p-3 bg-[var(--color-bg)] rounded-lg hover:bg-[var(--color-border)] transition-colors">
                            <div class="flex-1 min-w-0">
                                <a asp-area="" asp-controller="Blog" asp-action="Post" asp-route-slug="@post.Slug" class="font-medium text-[var(--color-text)] hover:text-[var(--color-primary)] truncate block" target="_blank">
                                    @post.Title
                                </a>
                                <div class="flex items-center gap-3 mt-1 text-xs text-[var(--color-text-medium)]">
                                    <span>@(post.PublishedDate?.ToString("MMM dd, yyyy") ?? "Draft")</span>
                                    <span>‚Ä¢</span>
                                    <span>@post.ViewCount views</span>
                                </div>
                            </div>
                            @if (post.IsPublished)
                            {
                                <span class="ml-2 px-2 py-1 bg-green-100 text-green-800 text-xs rounded">Published</span>
                            }
                            else
                            {
                                <span class="ml-2 px-2 py-1 bg-orange-100 text-orange-800 text-xs rounded">Draft</span>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-[var(--color-text-medium)] text-center py-8">No posts yet. Create your first blog post!</p>
            }
        </div>

        <!-- Top Posts -->
        <div class="card">
            <h3 class="text-xl font-bold mb-4">üî• Top Posts by Views</h3>
            @if (Model.TopPosts.Any())
            {
                <div class="space-y-3">
                    @for (int i = 0; i < Model.TopPosts.Count; i++)
                    {
                        var post = Model.TopPosts[i];
                        <div class="flex items-start gap-3 p-3 bg-[var(--color-bg)] rounded-lg hover:bg-[var(--color-border)] transition-colors">
                            <div class="flex-shrink-0 w-8 h-8 bg-[var(--color-primary)] text-white rounded-full flex items-center justify-center font-bold text-sm">
                                @(i + 1)
                            </div>
                            <div class="flex-1 min-w-0">
                                <a asp-area="" asp-controller="Blog" asp-action="Post" asp-route-slug="@post.Slug" class="font-medium text-[var(--color-text)] hover:text-[var(--color-primary)] truncate block" target="_blank">
                                    @post.Title
                                </a>
                                <div class="flex items-center gap-3 mt-1 text-xs text-[var(--color-text-medium)]">
                                    <span>üëÅÔ∏è @post.ViewCount views</span>
                                    <span>‚Ä¢</span>
                                    <span>@(post.PublishedDate?.ToString("MMM dd, yyyy"))</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-[var(--color-text-medium)] text-center py-8">No published posts with views yet.</p>
            }
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card mt-6">
        <h3 class="text-xl font-bold mb-4">‚ö° Quick Actions</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <a asp-area="Admin" asp-controller="Blog" asp-action="Create" class="p-4 bg-[var(--color-bg)] rounded-lg hover:bg-[var(--color-border)] transition-colors text-center">
                <div class="text-3xl mb-2">‚úçÔ∏è</div>
                <div class="font-medium">Create New Post</div>
                <div class="text-sm text-[var(--color-text-medium)]">Write a new blog post</div>
            </a>
            <a asp-area="Admin" asp-controller="Blog" asp-action="Index" class="p-4 bg-[var(--color-bg)] rounded-lg hover:bg-[var(--color-border)] transition-colors text-center">
                <div class="text-3xl mb-2">üìã</div>
                <div class="font-medium">Manage Posts</div>
                <div class="text-sm text-[var(--color-text-medium)]">Edit or delete posts</div>
            </a>
            <a href="/sitemap.xml" target="_blank" class="p-4 bg-[var(--color-bg)] rounded-lg hover:bg-[var(--color-border)] transition-colors text-center">
                <div class="text-3xl mb-2">üó∫Ô∏è</div>
                <div class="font-medium">View Sitemap</div>
                <div class="text-sm text-[var(--color-text-medium)]">Check SEO sitemap</div>
            </a>
        </div>
    </div>
</div>

<style>
    .admin-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
    }
</style>
